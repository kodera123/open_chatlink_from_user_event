const jsonParseCookieVal = cookie_key => {
  var cookie_val = decodeURIComponent(((document.cookie + ';').match(cookie_key + '=([^¥S;]*)') || [])[1])
  if (cookie_val == 'undefined') {
    return undefined;
  } else {
    return JSON.parse(cookie_val);
  }
}


